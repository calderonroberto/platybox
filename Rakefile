require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('platybox', '0.0.1') do |p|
  p.description    = "The platybox API gem"
  p.url            = "http://github.com/calderonroberto/platybox"
  p.author         = "Roberto Calderon"
  p.email          = "roberto @ robertocalderon.ca"
  p.ignore_pattern = ["tmp/*", "script/*"]
  p.summary 	   = "This gem provides easy interaction with the Platybox API"
  p.development_dependencies = ['oauth >=0.4.3' ,'omniauth >=0.2.0.beta5']
end
